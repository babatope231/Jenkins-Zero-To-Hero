pipeline {
    agent any

    environment {
        DOCKERHUB_USERNAME = "babatopesdocker"
        IMAGE_NAME = "${DOCKERHUB_USERNAME}/ultimate-cicd:${BUILD_NUMBER}"
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/babatope231/Jenkins-Zero-To-Hero'
            }
        }

        stage('Build App') {
            steps {
                dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
                    docker.image('maven:3.9.3-eclipse-temurin-17').inside {
                        sh 'mvn clean install'
                    }
                }
            }
        }

        stage('Build and Push Docker Image') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-credentials', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
                        script {
                            sh "docker build -t ${IMAGE_NAME} ."
                            sh "echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin"
                            sh "docker push ${IMAGE_NAME}"
                        }
                    }
                }
            }
        }

        stage('Update Deployment File') {
            steps {
                script {
                    sh """
                        sed -i 's|image:.*|image: ${IMAGE_NAME}|' java-maven-sonar-argocd-helm-k8s/k8s/deployment.yaml
                    """
                }
            }
        }

        stage('Deploy to K8s') {
            steps {
                dir('java-maven-sonar-argocd-helm-k8s') {
                    sh 'kubectl apply -f k8s/deployment.yaml'
                    sh 'kubectl apply -f k8s/service.yaml'
                }
            }
        }
    }
}
